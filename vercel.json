{
  "routes": [
    {
      "src": "/.*",
      "dest": "/api/router.go"
    }
  ],
  "functions": {
    "api/router.go": {
      "memory": 128,
      "maxDuration": "10s",
      "includeFiles": [
        "api/*",
        "config.yaml",
        "templates/*",
        "public/*"
      ]
    }
  },
  "build": {
    "env": {
      "GO_BUILD_FLAGS": "-ldflags '-s -w'"
    }
  }
}